<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mu.compet.NewWriteActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainRedColor"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/toolbar_text" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_toolbar"
        android:layout_margin="16dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="addPictureClicked"
            app:srcCompat="@drawable/ic_add_picture" />

        <ImageView
            android:id="@+id/image_gallery_first"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/image_gallery_second"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/image_gallery_third"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_gallery"
        android:layout_alignStart="@+id/layout_gallery"
        android:layout_below="@+id/layout_gallery">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="addCameraClicked"
            app:srcCompat="@drawable/ic_add_camera" />

        <ImageView
            android:id="@+id/image_camera_first"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/image_camera_second"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/image_camera_third"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_camera"
        android:layout_alignStart="@+id/layout_camera"
        android:layout_below="@+id/layout_camera"
        android:ems="10"
        android:hint="@string/edit_search_keyword"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_complete_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/mainRedColor"
        android:text="@string/btn_complete_post"
        android:textColor="@android:color/white"
        android:onClick="writeCompleteClicked"/>


</RelativeLayout>
